<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/coal" android:id="@+id/imageView"
            android:layout_alignParentStart="true" android:layout_centerVertical="true"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/text__i_am" android:text="@string/string1"
            android:layout_width="wrap_content"
            tools:layout_centerInParent="false"
            android:layout_marginTop="64dp" android:textSize="40sp"
            android:textColor="@android:color/black" android:layout_alignParentStart="true"
            android:layout_marginStart="105dp"/>
    <TextView
            android:text="@string/string2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text__poor" android:textSize="40sp"
            android:layout_alignTop="@+id/text__i_am" android:layout_alignParentEnd="true"
            android:layout_marginEnd="111dp" android:textStyle="bold" android:textColor="@android:color/black"/>
</RelativeLayout>
